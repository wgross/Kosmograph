<UserControl x:Class="Kosmograph.Desktop.Editors.View.EditTagControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kosmograph.Desktop.Editors.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./CommonResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <local:EditorHeaderControl Text="{Binding Name, Mode=OneWay, StringFormat={}Edit {0}}" />
        <local:EditItemNameControl Style="{StaticResource editItemNameControlInEditor}" />
        <local:EditTagFacetPropertiesControl />
    </StackPanel>
</UserControl>
