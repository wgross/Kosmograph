<UserControl x:Class="Kosmograph.Desktop.Controls.ShowGraphControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kosmograph.Desktop.Controls"
             xmlns:kdgv="clr-namespace:Kosmograph.Desktop.Graph.View;assembly=Kosmograph.Desktop.Graph"
             kdgv:GraphXViewer.EditEntity="graphViewer_EditEntity"
             kdgv:GraphXViewer.EditRelationship="graphViewer_EditRelationship"
             kdgv:GraphXViewerHeaderArea.EditTag="graphViewer_EditTag"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel
        LastChildFill="True">
        <!--
        Shows the relationshios  graoh as Header control and graph control.
        Handles the event mappings from the graph and hgrah header to the KosmoGraphViewModel
        -->
        <kdgv:GraphXViewerHeaderArea 
            x:Name="graphHeader"
            DockPanel.Dock="Top"
            DataContext="{Binding Graph}"/>
        <kdgv:GraphXViewer 
            x:Name="graphViewer"
            DataContext="{Binding Graph}"
            Margin="0,0,0,5"/>
    </DockPanel>
</UserControl>
