<Window x:Class="Kosmograph.Desktop.MsaglGraph.KosmographViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kosmograph.Desktop.MsaglGraph"
        mc:Ignorable="d"
        Title="MSAGL Graph" Height="450" Width="800">
    <DockPanel LastChildFill="True" 
        Name="graphPanel"
        ClipToBounds="True">
        <StackPanel DockPanel.Dock="Top"
            Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Command="local:KosmographViewerWindow.Layout"
                    Content="{Binding RelativeSource={RelativeSource Self}, Path=Command.Text}"/>
        </StackPanel>
        <local:KosmographControl x:Name="viewerControl"/>
    </DockPanel>
</Window>
