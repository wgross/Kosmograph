<UserControl x:Class="Kosmograph.Desktop.Controls.EditTagControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kosmograph.Desktop.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <local:EditorHeaderControl 
            Text="{Binding Name, StringFormat={}Edit {0}}" />
        <local:EditItemNameControl/>
        <local:EditorSectionHeaderControl DockPanel.Dock="Top"
                Text="Edit Properties" />
        <local:EditTagFacetPropertiesControl />
    </StackPanel>
</UserControl>
