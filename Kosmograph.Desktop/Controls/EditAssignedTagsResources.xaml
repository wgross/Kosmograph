<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Kosmograph.Desktop.Controls"
                    xmlns:kvm="clr-namespace:Kosmograph.Desktop.ViewModel">

    <DataTemplate DataType="{x:Type kvm:AssignedTagViewModel}">
        <!--
        A single assigned tags show the name on top and the property
        name value pairs below.
        -->
        <StackPanel Orientation="Vertical">
            <!--
            diag:PresentationTraceSources.TraceLevel=High"
            -->   
            <Border BorderThickness="0,0,0,2" BorderBrush="Black" DockPanel.Dock="Top">
                <TextBlock Text="{Binding Name, StringFormat={}Edit Properties of: {0}}" FontWeight="Bold" />
            </Border>
            <ItemsControl 
                Name="assignedTagsItemsControl"
                DockPanel.Dock="Top"
                ItemsSource="{Binding Properties}">
            </ItemsControl>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>