<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Kosmograph.Desktop.Controls"
                    xmlns:kvm="clr-namespace:Kosmograph.Desktop.ViewModel">

    <DataTemplate DataType="{x:Type kvm:AssignedTagViewModel}">
        <!--
        A single assigned tags show the name on top and the property
        name value pairs below.
        -->
        <StackPanel Orientation="Vertical">
            <!--
            diag:PresentationTraceSources.TraceLevel=High"
            -->
            <Label
                DockPanel.Dock="Top"
                Content="{Binding Name, Mode=OneWay}" />
            <ItemsControl Name="assignedTagsItemsControl"
                DockPanel.Dock="Top"
                ItemsSource="{Binding Properties}">
            </ItemsControl>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>