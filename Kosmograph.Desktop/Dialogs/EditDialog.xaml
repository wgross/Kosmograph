<Window x:Class="Kosmograph.Desktop.Dialogs.EditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kosmograph.Desktop.Dialogs"
        mc:Ignorable="d"
        Title="EditDialog" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary Source="./EditDialogResources.xaml" />
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Key="Return" Command="{x:Static local:DialogCommands.Ok}" />
        <KeyBinding Key="Esc" Command="{x:Static local:DialogCommands.Cancel}" />
    </Window.InputBindings>
    <Grid>
        <ContentControl Name="dialogContent" Content="{Binding .}" />
    </Grid>
</Window>